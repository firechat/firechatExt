{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "FireChat (Alpha)",
    "version": "2.0",
    "manifest_version": 2,
    "description": "Comment or Chat with anyone, on any website",
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://firechatext.firebaseio.com https://s-dal5-nss-4.firebaseio.com; object-src 'self'",
    "background": {
        "page": "background.html"
    },
    "permissions": [
    "tabs","*://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["http://www.google.com/robots.txt*"],
            "js": ["oauth2/oauth2_inject.js"],
            "run_at": "document_start"
        }
    ]

}